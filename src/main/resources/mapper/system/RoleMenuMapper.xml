<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.icezhg.athena.dao.RoleMenuDao">

    <select id="findMenuIdsByRoleIds" parameterType="list" resultType="string">
        SELECT menu_id
        FROM sys_role_menu
        WHERE role_id IN
        <foreach collection="roleIds" item="item" open="(" separator=", " close=")">
            #{item,jdbcType=INTEGER}
        </foreach>
    </select>

    <delete id="batchDelete" parameterType="java.lang.Long">
        DELETE FROM sys_role_menu
        <where>
            <foreach collection="records" item="item" open="(" separator=") OR (" close=")">
                role_id = #{item.roleId,jdbcType=INTEGER} AND menu_id = #{item.menuId,jdbcType=INTEGER}
            </foreach>
        </where>
    </delete>

    <insert id="batchInsert" parameterType="list">
        INSERT INTO sys_role_menu
        ( role_id,menu_id)
        VALUES
        <foreach collection="records" item="item" open="(" separator="), (" close=")">
            #{item.roleId,jdbcType=INTEGER},#{item.menuId,jdbcType=INTEGER}
        </foreach>
    </insert>
</mapper>
